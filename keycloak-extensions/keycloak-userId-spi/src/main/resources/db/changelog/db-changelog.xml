<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="jzargo">
        <createTable tableName="incrementing_value">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)"/>
            <column name="lastValue" type="bigint" defaultValueNumeric="0"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="jzargo">
        <renameColumn tableName="incrementing_value"
                      oldColumnName="lastValue"
                      newColumnName="lastvalue"
                      columnDataType="bigint"/>
    </changeSet>
    <changeSet id="3" author="jzargo">
        <createTable tableName="outbox">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="aggregate_type" type="VARCHAR(50)"/>
            <column name="aggregate_id" type="VARCHAR(100)"/>

            <column name="event_type" type="VARCHAR(50)"/>
            <column name="payload" type="JSONB"/>

            <column name="status" type="VARCHAR(20)" defaultValue="UNPUBLISHED"/>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE"
                    defaultValueComputed="NOW()"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="Jzargo">
        <modifyDataType tableName="outbox" columnName="payload" newDataType="varchar(1024)"/>
    </changeSet>
</databaseChangeLog>
